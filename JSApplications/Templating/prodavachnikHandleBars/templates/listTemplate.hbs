<h1 class="titleForm">Advertisements</h1>
<div id="ads" class="ads">
    <table>
        <tr>
            <th>Title</th>
            <th>Publisher</th>
            <th>Description</th>
            <th>Price</th>
            <th>Date Published</th>
            <th>Actions</th>
        </tr>
        {{#each ads}}
            <tr>
                <td>{{title}}</td>
                <td>{{publisher}}</td>
                <td>{{description}}</td>
                <td>{{price}}</td>
                <td>{{date}}</td>
                {{#if author}}
                    <td><a href="#" data-id="{{@index}}">[ReadMore]</a><a href="#" data-id="{{@index}}">[Edit]</a><a href="#" data-id="{{@index}}">[Delete]</a></td>
                {{else}}
                    <td><a href="#" data-id="{{@index}}">[ReadMore]</a></td>
                {{/if}}
            </tr>
        {{/each}}
    </table>
</div>
